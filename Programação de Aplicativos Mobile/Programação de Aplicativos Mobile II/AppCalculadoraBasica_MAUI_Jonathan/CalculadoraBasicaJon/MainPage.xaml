<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraBasicaJon.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Entry x:Name="txt_num1" Placeholder="Digite o Número 1" Keyboard="Numeric"/>
            <Entry x:Name="txt_num2" Placeholder="Digite Número 2" Keyboard="Numeric"/>
            <Button Text="+" Clicked="Soma"/>
            <Button Text="-" Clicked="Sub"/>
            <Button Text="*" Clicked="Multi"/>
            <Button Text="/" Clicked="Div"/>

            <Label x:Name="resultado" Text="Resultado: "/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
