<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediaNotasJon.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Entry x:Name="txt_nota1" Placeholder="Nota 1" Keyboard="Numeric"/>
            <Entry x:Name="txt_nota2" Placeholder="Nota 2" Keyboard="Numeric"/>

            <Button Text="Calcular Média" Clicked="MediaNotas"/>

            <Label x:Name="resultado" Text="Média: " FontSize="20"/>
            <Label x:Name="txtsituacao" Text="Situação: " FontSize="20"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
